<% content_for :head do %>
	<%= auto_discovery_link_tag :rss, "/new.rss" %>
<% end %>

<% @posts.each do |post| %>
	<%= render partial: "posts/preview", locals: { post: post } if can? :see, post %>
<% end %>

<span class="page_navigation"><%= link_to("< previous", "/new?page="+(@page.to_i-1).to_s) if @page > 1 %> &nbsp;&nbsp; <%= link_to("next >", "/new?page="+(@page.to_i+1).to_s) if @show_next_link %></span>
