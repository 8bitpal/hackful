<% content_for :head do %>
	<%= auto_discovery_link_tag :rss, "/frontpage.rss" %>
<% end %>

<% @posts.each do |post| %>
	<%= render partial: "posts/preview", locals: { post: post } %>
<% end %>

<span class="page_navigation"><%= link_to("< previous", "/?page="+(@page.to_i-1).to_s) if @page > 1 %> &nbsp;&nbsp; <%= link_to("next >", "/?page="+(@page.to_i+1).to_s) if @show_next_link %></span>
